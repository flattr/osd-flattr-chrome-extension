{
  "manifest_version": 2,
  "name": "Flattr",
  "version": "0.7",
  "description": "Displays a flattr button for Wikipedia and other sites that do not have flattr buttons visible",
  "options_page": "options/index.html",
  "background_page": "background.html",
  "page_action": {
    "default_icon": "icon_128.png",
    "default_title": "Flattr this!"
  },
  "permissions": [
    "tabs",
    "https://api.flattr.com/"
  ],
  "icons": {
    "16": "favicon.ico",
    "48": "icon_48.png",
    "128": "icon_128.png"
  },
  "intents": {
    "http://webintents.org/share" : {
      "type" : ["text/uri-list"],
      "path" : "intent.html",
      "title" : "Share link to Flattr"
    }
  }
}
