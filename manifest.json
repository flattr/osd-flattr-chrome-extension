{
  "name": "Flattr",
  "version": "0.8.6",
  "manifest_version": 2,
  "description": "Displays a flattr button for Wikipedia and other popular sites that do not have flattr buttons visible",
  "background": {
      "scripts": ["util.js", "background.js"]
  },
  "page_action": {
    "default_icon": "icon_19.png",
    "default_title": "Flattr this!"
  },
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["contentscript.js"]
    }
  ],
  "permissions": [
    "tabs",
    "https://api.flattr.com/"
  ],
  "icons": {
    "16": "favicon.ico",
    "48": "icon_48.png",
    "128": "icon_128.png"
  },
  "intents": {
    "http://webintents.org/share" : {
      "type" : ["text/uri-list"],
      "path" : "intent.html",
      "title" : "Share link to Flattr"
    }
  }
}
